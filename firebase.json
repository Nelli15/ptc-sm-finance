{
  "hosting": {
    "public": "dist/pwa",
    "site": "sp-finance",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/receipt",
        "function": "getReceipt"
      },
      {
        "source": "/downloadReceiptsZip",
        "function": "downloadReceiptsZip"
      },
      {
        "source": "/downloadCSV",
        "function": "downloadCSV"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "ui": {
      "enabled": false,
      "port": 4000
    },
    "auth": {
      "port": 9099
    },
    "database": {
      "port": 9000
    },
    "pubsub": {
      "port": 8085
    }
  },
  "functions": {
    "predeploy": [],
    "source": "functions"
  }
}
